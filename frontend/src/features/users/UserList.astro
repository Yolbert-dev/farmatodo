---
import UserItem from "./UserItem.astro";
import ky from "ky";
import { BACK_ENDPOINT } from "../../config/endpoints";

type User = {
  id_codigo: string;
  name: string;
  rol: string;
};

const usersData = await ky.get(`${BACK_ENDPOINT}/api/users`).json<User[]>();
---


<div class="max-h-130 overflow-y-auto border border-gray-300 rounded-md shadow-md">
  <table id="tableUser" class="min-w-full">
    <thead class="bg-gray-100">
      <tr>
        <th class="p-4 text-left">ID</th>
        <th class="p-4 text-left">Nombre</th>
        <th class="p-4 text-left">Rol</th>
      </tr>
    </thead>
    <tbody id="users-list">
  {[...usersData]
    .sort((a, b) => a.rol.localeCompare(b.rol))
    .map(user => (
      <UserItem 
        key={user.id_codigo}
        id_codigo={user.id_codigo}
        name={user.name}
        rol={user.rol}
         
      />
      
  ))}
  
</tbody>
  </table>
</div>
      <script>
import userModule from "./user.module";

          // @ts-nocheck
 document.querySelector("#users-list").addEventListener("click", async (e) => {
  const btn = (e.target as Element)?.closest(".delete-btn");
  if (!btn) return;

  const id = btn.getAttribute("data-id");
  if (!id) return;

  try {
    await userModule.removeUser(id);
    location.reload(); // o fetchData() si prefieres evitar recarga completa
  } catch (err) {
    console.error("Error al eliminar usuario:", err);
    alert("No se pudo eliminar el usuario.");
  }
});

    </script>